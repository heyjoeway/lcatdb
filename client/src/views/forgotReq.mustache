<!DOCTYPE html>
<head>
    <!--head-->
    <title><!--title--> - Reset Password</title>
    <meta name="app:page" content="forgotReq"/>
    <meta name="app:mustLogin" content="false"/>
    <meta name="app:noUser" content="true"/>
</head>
<body>
    <!--nav_nouser-->
    
    <div id="content"><div class="container">
        <h2>Reset Password</h2>
        <hr>
        {{#query}}
        {{#password}}
        <div class="alert alert-warning">
            <p>Invalid password. Passwords must be at least 6 characters long.</p>
        </div>
        {{/password}}
        {{#passwordMismatch}}
        <div class="alert alert-warning">
            <p>Passwords do not match.</p>
        </div>
        {{/passwordMismatch}}
        {{#write}}
        <div class="alert alert-error">
            <p>An internal error has occurred. Please contact the administrator of this site to report the issue.</p>
        </div>
        {{/write}}
        {{/query}}

        <form class="container" action="<!--url-->/forgot/{{forgot.fid}}/resetDo" method="post">
            <div>
                <label class="control-label" for="password">
                    Password
                </label>
                <input class="form-control" type="password" name="password">
            </div>
            <br>
            <div>
                <label class="control-label" for="passwordRetype">
                    Retype Password
                </label>
                <input class="form-control" type="password" name="passwordRetype">
            </div>
            <br>
            <div class="form-group">
                <a href="/" class="btn btn-default">Cancel</a>
                <button type="submit" name="submit" class="btn btn-primary">Submit</button>
            </div>

        </form>
    </div></div>

    <!--scripts-->
</body>
