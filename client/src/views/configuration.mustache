<!DOCTYPE html>
<head>
    <!--head-->
    <title><!--title--> - Configuration</title>
</head>
<body>
    <!--nav-->

    <div class="container">
    {{#configuration}}
        <h2 class="h-inline">Configuration</h2>
        {{#canEdit}}
        &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
        <a role="button" class="btn btn-primary btn-lg" href="/configurations/{{_id}}/reading">Take Reading</a>
        <br class="visible-xxs">
        {{/canEdit}}
        <br>

        <div class="row">
            <div class="col-xs-4 col-sm-2 text-right">Name</div>
            <div>{{name}}</div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-2 text-right">ID</div>
            <div>{{_id}}</div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-2 text-right">Owner</div>
            <div>
                <a href="/profile/{{owner._id}}">{{owner.username}}</a>
            </div>
        </div>
        <div class="row">
            <div class="col-xs-4 col-sm-2 text-right">Creation Time</div>
            <div>{{creation}}</div>
        </div>
        <br>
        <a role="button" class="btn btn-primary" href="/configurations/{{_id}}/readings">View Readings</a>
        &nbsp;
        {{#canEdit}}        
        <a role="button" class="btn btn-secondary" href="/configurations/{{_id}}/edit">Edit Details</a>
        {{/canEdit}}
        <br>
        <div id="members" style="display: none">
            <h3>Members</h3>
            <ul>
                {{#members}}
                <li>
                    UID: {{uid}}<br>
                    {{#canEdit}}
                    <a href="/configurations/{{_id}}/removeMember/{{uid}}">Remove</a>
                    {{/canEdit}}
                </li>
                {{/members}}
            </ul>
            {{#canEdit}}
            <a href="/configurations/{{_id}}/addMember">Add New Member</a>
            {{/canEdit}} 
        </div>
        <h3>Sensors</h3>
        <ul class="list-group">
            {{#sensors}}
            <li class="list-group-item"><a href="/sensors/{{_id}}">{{name}}</a></li>
            {{/sensors}}
            {{^sensors}}
            <p>No sensors found for this configuration.</p>
            {{/sensors}}
        </ul>
        {{#canEdit}}
        <a role="button" class="btn btn-primary" href="/sensors/new?configuration={{_id}}">Add New Sensor</a>
        &nbsp;
        <a role="button" class="btn btn-secondary" href="/configurations/{{_id}}/addSensor">Add Existing Sensor</a>
        {{/canEdit}} 
        <h3>Edits</h3>
        <ul class="list-group">
            {{#edits}}
            <li class="list-group-item">{{time}}</li>
            {{/edits}}
        </ul>
        {{/configuration}}
    </div>

    <!--footer-->
    <!--scripts-->
</body>