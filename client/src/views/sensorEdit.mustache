<!DOCTYPE html>
<head>
    <!--head-->
    <title><!--title--> - Edit Sensor</title>
    <meta name="app:page" content="sensorEdit"/>
    <meta name="app:mustLogin" content="true"/>
    <meta name="app:noUser" content="false"/>
</head>
<body>
    <!--nav_auto-->

    <div id="content"><div class="container">
        {{#sensor}}
        <h2>Edit Sensor</h2>
        <hr>
        {{#canEdit}}
        <form action="<!--url-->/sensors/{{_id}}/editDo" method="post" class="form-horizontal">
            <div>
                <label class="control-label" for="name">
                    <strong>Name</strong>
                </label>
                <input  class="form-control"
                        type="text" name="name"
                        value="{{name}}">
            </div>
            <div>
                <label class="control-label" for="description">
                    <strong>Description</strong>
                </label>
                <input  class="form-control"
                        type="text" name="description"
                        value="{{description}}">
            </div>

            <div>
                <label class="control-label" for="model">
                    <strong>Model</strong>
                </label>
                <input  class="form-control"
                        type="text" name="model"
                        value="{{model}}" list="models">
                <datalist id="models">
                    {{#models}}
                    <option>{{name}}</option>
                    {{/models}}
                </datalist>
            </div>

            <div class="form-group">
                <a href="/sensors/{{_id}}" class="btn btn-default">Cancel</a>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
        </form>
        {{/canEdit}}
        {{^canEdit}}
        <p>Sorry, you do not have permission to edit this sensor.
        {{/canEdit}}
        {{/sensor}}
    </div></div>

    <!--scripts-->
</body>