{
    "id": "/Configuration",
    "type": "object",
    "properties": {
        "owner": {
            "$ref": "/Definitions/oid",
            "description": "OID of the user who owns this configuration."
        },
        "members": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "oid": { "$ref": "/Definitions/oid" },
                    "role": { "type": "integer" } 
                }
            },
            "default": []
        },
        "name": {
            "$ref": "/Definitions/textShort",
            "default": "New Configuration"
        },
        "sensors": {
            "type": "array",
            "items": { "$ref": "/Sensor" },
            "default": []
        },
        "creation": { "type": "integer" },
        "edits": {
            "type": "array",
            "items": { "$ref": "/Edit" },
            "default": []
        }
    },
    "additionalProperties": false,
    "minProperties": 6
}