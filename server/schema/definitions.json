{
    "id": "/Definitions",
    "definitions": {
        "textShort": {
            "type": "string",
            "pattern": "^[^<>\r\n]*$"
        },
        "textLong": {
            "type": "string",
            "pattern": "^[^<>]*$"
        },
        "oid": {
            "type": "object"
        },
        "time": {
            "type": "integer",
            "minimum": 0
        },
        "configurationPerms": {
            "type": "array",
            "items": {
                "type": "string",
                "enum": [
                    "addMember",
                    "removeMember",
                    "addSensor",
                    "removeSensor",
                    "editName"
                ]
            },
            "default": []
        },
        "sensorType": {
            "$ref": "/Definitions#/definitions/textShort",
            "enum": [
                "depth",
                "temperature"
            ]
        }
    }
}