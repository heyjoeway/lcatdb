{
    "offlineInfo": true,
    "id": "/Reading",
    "type": "object",
    "properties": {
        "configuration": {
            "$ref": "/Definitions#/definitions/oid",
            "description": "OID of the configuration this reading is associated with."
        },
        "creator": {
            "$ref": "/Definitions#/definitions/oid",
            "description": "OID of the user who created this reading."
        },
        "publisher": {
            "$ref": "/Definitions#/definitions/oid", 
            "description": "OID of the user who published this reading."
        },
        "published": {
            "type": "boolean",
            "default": false
        },
        "location": { "$ref": "/Definitions#/definitions/location" },
        "timeCreated": { "$ref": "/Definitions#/definitions/time" },
        "timePublished": { "$ref": "/Definitions#/definitions/time" },
        "values": {
            "type": "array",
            "items": { 
                "type": "object",
                "properties": {
                    "sensor": { "$ref": "/Definitions#/definitions/oid" },
                    "type": { "$ref": "/Definitions#/definitions/sensorType" },
                    "data": { "type": "object" }
                },
                "additionalProperties": false
            },
            "default": []
        }
    },
    "required": [
        "configuration",
        "creator",
        "published",
        "location",
        "timeCreated",
        "values"
    ],
    "additionalProperties": false
}