{
    "id": "/Reading",
    "type": "object",
    "properties": {
        "configuration": {
            "$ref": "/Definitions/oid",
            "description": "OID of the configuration this reading is associated with."
        },
        "creator": {
            "$ref": "/Definitions/oid",
            "description": "OID of the user who created this reading."
        },
        "publisher": {
            "$ref": "/Definitions/oid", 
            "description": "OID of the user who published this reading."
        },
        "published": {
            "type": "boolean",
            "default": false
        },
        "location": {
            "type": "object",
            "properties": {
                "lat": {
                    "type": "number",
                    "minimum": -90,
                    "maximum": 90
                },
                "long": {
                    "type": "number",
                    "minimum": -180,
                    "maximum": 180
                },
                "range": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Max error from lat/long in meters."
                },
                "alt": {
                    "type": "number",
                    "description": "Distance from sea level in meters."
                },
                "altRange": {
                    "type": "number",
                    "minimum": 0,
                    "description": "Max error from alt in meters."
                }
            },
            "required": ["lat", "long"],
            "dependencies": {
                "range": ["lat", "long"],
                "altRange": "alt"
            }
        },
        "timeCreated": { "$ref": "/Definitions/time" },
        "timePublished": { "$ref": "/Definitions/time" },
        "values": {
            "type": "array",
            "items": { "$ref": "/Value" },
            "default": []
        }
    }
}