{
    "id": "/Sensor",
    "type": "object",
    "properties": {
        "_id": { "$ref": "/Definitions#/definitions/oid" },
        "owner": { "$ref": "/Definitions#/definitions/oid" },
        "type": {
            "$ref": "/Definitions#/definitions/sensorType"
        },
        "name": {
            "$ref": "/Definitions#/definitions/textShort",
            "default": "New Sensor"
        },
        "description": {
            "$ref": "/Definitions#/definitions/textLong",
            "default": ""
        },
        "model": {
            "$ref": "/Definitions#/definitions/textShort",
            "default": ""
        },
        "edits": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "time": { "$ref": "/Definitions#/definitions/time" },
                    "changes": { "$ref": "/SensorEdit#" }
                },
                "additionalProperties": false,
                "required": ["time"]
            },
            "default": []
        }
    },
    "additionalProperties": false,
    "required": [
        "owner",
        "type",
        "name",
        "description",
        "model"
    ]
}